{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ES2018"
    ],
    "rootDir": "src",
    "outDir": "_website"
  },
  "include": [
    "website/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
